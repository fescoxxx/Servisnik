<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical">

        <TextView
            android:id="@+id/works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="2pt"
            android:paddingTop="5pt"
            android:text="works"
            android:textColor="#3c3c3c"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/citystreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="16dp"
            android:paddingRight="2pt"
            android:text="citystreet"
            android:textColor="#979797"
            android:textSize="14dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberhome"
                android:layout_width="533dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5pt"
                android:paddingLeft="16dp"
                android:text="numberhome"
                android:textColor="#979797"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_deadline_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="5pt"
                android:paddingRight="4pt"
                android:text="TextView"
                android:textAlignment="textEnd" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#b3b3b3" />

    </LinearLayout>
</LinearLayout>