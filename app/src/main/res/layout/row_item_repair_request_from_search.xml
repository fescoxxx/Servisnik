<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
       >

        <TextView
            android:id="@+id/works"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4pt"
            android:paddingRight="2pt"
            android:paddingTop="5pt"
            android:text="works"
            android:textSize="16dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/citystreet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="4pt"
            android:paddingRight="2pt"
            android:textSize="14dp"
            android:text="citystreet" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/numberhome"
                android:layout_width="549dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingBottom="5pt"
                android:paddingLeft="4pt"
                android:text="numberhome"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/date_deadline_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:paddingBottom="5pt"
                android:paddingRight="4pt"
                android:text="TextView"
                android:textAlignment="textEnd" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>